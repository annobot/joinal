/*** Table Styles **/

.table-fill {
  background: white;
  border-radius:3px;
  border-collapse: collapse;
  height: 300px;
  margin: auto;
  max-width: 600px;
  padding:0;
  width: 100%;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
